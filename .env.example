# Copy to .env and fill in your values.
# OpenRouter (required for real API calls)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions

# When true, skip real API calls and return mock responses (no cost).
SIMULATION_MODE=false

# Base model IDs (OpenRouter model strings)
MODEL_GPT=openai/gpt-4o
MODEL_CLAUDE=anthropic/claude-sonnet-4
MODEL_GEMINI=google/gemini-2.0-flash
MODEL_GROK=x-ai/grok-3

# Agent role overrides (default to base models if unset)
# AGENT_QUANT_MODEL=
# AGENT_RISK_MODEL=
# AGENT_MACRO_MODEL=
# AGENT_FUNDAMENTAL_MODEL=
# AGENT_SENTIMENT_MODEL=
# AGENT_CONTRARIAN_MODEL=
# AGENT_CHAIRMAN_MODEL=
# AGENT_REVIEWER_MODEL=
# AGENT_PLANNER_MODEL=

# Data directory for conversation storage
# DATA_DIR=data/conversations
